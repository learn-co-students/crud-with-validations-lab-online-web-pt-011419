
<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
       </ul>
    </div>
      <% end %>

    <%= f.text_field :title %>
    <%= f.text_field :artist_name %>
    <%= f.text_field :genre %>
    <%= f.check_box :released %>
    <%= f.number_field :release_year %>
    <%= f.submit %>

  <% end %>
